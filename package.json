{
  "name": "cognitive-discipline-workspace",
  "version": "1.0.0",
  "description": "Single-user, single-project workflow tool for disciplined cognitive work",
  "type": "module",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8.15.4"
  },
  "scripts": {
    "dev": "concurrently \"pnpm:dev:api\" \"pnpm:dev:ui\"",
    "dev:api": "tsx watch src/main.ts",
    "dev:ui": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "express": "4.18.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@testing-library/react": "14.2.1",
    "@types/better-sqlite3": "7.6.9",
    "@types/express": "4.17.21",
    "@types/node": "^20.11.19",
    "@types/react": "18.2.57",
    "@types/react-dom": "18.2.19",
    "@types/supertest": "6.0.2",
    "@types/uuid": "9.0.8",
    "@vitejs/plugin-react": "4.2.1",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "jsdom": "24.0.0",
    "prettier": "3.2.5",
    "supertest": "6.3.4",
    "tsx": "4.7.1",
    "typescript": "5.3.3",
    "vite": "5.1.4",
    "vitest": "1.3.1"
  }
}
